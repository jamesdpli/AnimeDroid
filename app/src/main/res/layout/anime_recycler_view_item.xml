<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mcvAnime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mivAnimeImageInRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_launcher_background" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvAnimeNameInRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/mivAnimeImageInRv"
            app:layout_constraintTop_toTopOf="@id/mivAnimeImageInRv"
            tools:text="hello" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvAgeRatingInRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Rated R" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvStartDateInRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@id/mivAnimeImageInRv"
            app:layout_constraintTop_toBottomOf="@+id/mtvAnimeNameInRv"
            tools:text="Rated R" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvEndDateInRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/mivAnimeImageInRv"
            app:layout_constraintTop_toBottomOf="@+id/mtvStartDateInRv"
            tools:text="Rated R" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvEpisodeCountInRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/mivAnimeImageInRv"
            app:layout_constraintTop_toBottomOf="@+id/mtvEndDateInRv"
            tools:text="Rated R" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>


