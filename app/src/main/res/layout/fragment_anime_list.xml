<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.animedroid.ui.view.AnimeListFragment">

    <TextView
        android:id="@+id/tvRecycelerViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Out the list below"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAnimeList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvRecycelerViewHeader"
        app:layout_constraintStart_toStartOf="@+id/tvRecycelerViewHeader"
        app:layout_constraintTop_toBottomOf="@+id/tvRecycelerViewHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>